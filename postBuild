#!/bin/bash

echo "ðŸ”§ Rebuilding Python sqlite3 bindings with updated system SQLite..."
PYTHON_VERSION=$(python -c "import platform; print(platform.python_version())")
PYTHON_MINOR=$(echo $PYTHON_VERSION | cut -d '.' -f 1,2)

# Reinstall sqlite3 Python bindings using new libsqlite3
pip uninstall -y sqlite3 || true
(cd $HOME/.pythonlibs/lib/python$PYTHON_MINOR && rm -rf sqlite3*)
python -m pip install --force-reinstall pysqlite3-binary
